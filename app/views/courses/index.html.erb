<div class="stack-center col-12">
  <div class="row-center">   
    <h2 class="title">Courses</h2>
  </div>
  <div class="stack-center col-8" id="courses">
    <% @courses.each do |course| %>
      <% if course.user_id == current_user.id %>
        <%= render course %>
      <% end %>
    <% end %>
  </div>
  <div class="row-center">  
    <%= link_to "New course", new_course_path, class:"btn-flat" %>
  </div>
</div>